<h1 id="search-page-title">{{searchedWord}} Results</h1>
<section class="row justify-content-center">
  {{#each featuredplant as |plant|}}
    <div class="col-12 col-sm-6 col-lg-3 mb-3">
        <a href="/plant/{{plant.id}}">
            <div class="plant card" style="width: 18rem;">
                <img class="card-img-top search-img" src="{{plant.image_url}}" alt="Card image cap">
                <div class="card-body">
                <h5 id="search-card-title" class="card-title">{{plant.common_name}}</h5>
                </div>
            </div>
        </a>
    </div>
  {{/each}}
</section>